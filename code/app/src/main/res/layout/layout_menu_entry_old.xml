<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/ll_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/bg_rect_gradient_prim_primdark_xmlcolor"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:elevation="2dp"
        >

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="serif"

            android:textAllCaps="false"
            android:textColor="@color/white_fff"
            android:layout_gravity="center"
            android:textStyle="bold|italic"

            android:textSize="24sp"
            tools:text="Fruits" />
        <TextView
            android:id="@+id/tv_edit_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/bg_curved_solid_white"
            android:drawableStart="@drawable/ic_edit_primary"
            android:gravity="center"
            android:padding="8dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_delete_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_gravity="center"

            android:background="@drawable/bg_curved_solid_white"
            android:drawableStart="@drawable/ic_delete_red"
            android:gravity="center"
            android:padding="8dp"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_item_dets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_curved_white_stroke_blue_dotted"
        android:padding="8dp"

        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:elevation="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/tv_itemname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="start|center"
                android:textColor="@color/black_000"
                android:textSize="16sp"
                tools:text="Banana is the national food of india" />

<!--            <View-->
<!--                android:layout_width="2dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginStart="8dp"-->
<!--                android:layout_marginTop="2dp"-->
<!--                android:layout_marginEnd="8dp"-->
<!--                android:layout_marginBottom="2dp"-->
<!--                android:background="@color/grey_aaa" />-->

            <TextView
                android:id="@+id/tv_p_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="80"
                android:textColor="@color/black_000"
                android:textSize="16sp"
                />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="2dp"
                android:background="@color/grey_aaa" />

            <TextView
                android:id="@+id/tv_p_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="80"
                android:textColor="@color/black_000"
                android:textSize="16sp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/line_blue_dotted" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_edit_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/bg_curved_stroke_blue"
                android:drawableStart="@drawable/ic_edit_primary"
                android:drawableTint="@color/green_5ee"
                android:drawablePadding="16dp"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="Edit"
                android:textColor="@color/green_5ee"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_delete_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/bg_curved_stroked_red"
                android:drawableStart="@drawable/ic_delete_red"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="Delete"
                android:textColor="@color/red_e53"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>



</LinearLayout>